# AWS / DynamoDB
AWS_REGION=ap-northeast-1
# For local development with DynamoDB Local (docker):
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_TABLE_USERS=CareerPassportUsers
DYNAMODB_TABLE_EVENTS=CareerPassportEvents
DYNAMODB_TABLE_STAMPS=CareerPassportStamps

# JWT secret (use a secure random value in production)
JWT_SECRET=replace_with_strong_random_value

# Optional seed user
SEED_EMAIL=org@example.com
SEED_PASSWORD=password123
SEED_NAME="Org Admin"

# Dummy credentials for DynamoDB Local
AWS_ACCESS_KEY_ID=LOCAL
AWS_SECRET_ACCESS_KEY=LOCAL
